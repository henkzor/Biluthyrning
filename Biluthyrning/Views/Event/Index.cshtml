@model EventIndexVM
@{
    ViewData["Title"] = "Index";
}

<h3>Events</h3>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Event number</th>
                    <th>Event type</th>
                    <th>Date </th>
                    <th>Car number</th>
                    <th>Booking number</th>
                    <th>Customer number</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = Model.EventBoxVMList.Count() -1; i >= 0; i--)
                {
                    <partial name="_EventBox" model=Model.EventBoxVMList[i] />

                }
                
            </tbody>
        </table>
    </div>
</div>

