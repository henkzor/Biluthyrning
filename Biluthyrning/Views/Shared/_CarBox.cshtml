<a asp-controller="Car" asp-action="Details" asp-route-id="@Model.Id">
    @Model.Cartype
    @Model.RegnNr
    @Model.MileageKm
    
</a>

@if (Model.FlaggedForCleaning)
{
    <button onclick="CleanCar(@Model.Id)">Clean</button>
}
@if (Model.FlaggedForService)
{
    <button onclick="ServiceCar(@Model.Id)">Service</button>
}
<button onclick="RemoveCar(@Model.Id)">Remove Car</button>
