@model CarDetailsVM
@{
    ViewData["Title"] = "Details";
}


<div>
    <h3>Car Details</h3>
    <span><b>Car ID: </b>@Model.Car.Id</span>
    <br />
    <span><b>Registration number: </b>@Model.Car.RegnNr</span>
    <br />
    <span><b>Current mileage:</b> @Model.Car.MileageKm</span>
</div>

<br /><br />

<h4>Bookings</h4>

<div class="row">
    <div class="col-md-8 col-lg-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Car number</th>
                    <th>Booking starts</th>
                    <th>Booking ends</th>
                    <th>Car type</th>
                    <th>Registration number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BookingBoxVMList)
                {
                    <partial name="_BookingBox" model="item" />
                }

            </tbody>
        </table>
    </div>
</div>

<h4>Events</h4>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Event number</th>
                    <th>Event type</th>
                    <th>Date </th>
                    <th>Car number</th>
                    <th>Booking number</th>
                    <th>Customer number</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = Model.EventBoxVMList.Count() - 1; i >= 0; i--)
                {
                    <partial name="_EventBox" model=Model.EventBoxVMList[i] />

                }

            </tbody>
        </table>
    </div>
</div>
