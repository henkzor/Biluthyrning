@model CustomerIndexVM
@{
    ViewData["Title"] = "Customers";
}

<h3>Customers</h3>

<div class="row">
    <div class="col-lg-6 col-md-8 col-sm-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Person Number</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model.CustomerBoxVMList)
                {

                    <partial name="_CustomerBox" model=item/>
                }
            </tbody>
        </table>
    </div>
</div>

